<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyStuff.Views.AgregarMarcaPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Marcas de Objetos"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand"/>

            <Entry x:Name="TxtMarca" Placeholder="Marca" FontSize="Large" TextColor="White" FontAttributes="Bold" PlaceholderColor="#B2b2b2" Keyboard="Text" />
          

            <Button x:Name="BtnGuardar" Text="Guardar" BackgroundColor="Green" TextColor="White" FontAttributes="Bold" Clicked="BtnGuardar_Clicked" />
            <Button x:Name="BtnCancelar" Text="Cancelar" BackgroundColor="Firebrick" TextColor="White" Clicked="BtnCancelar_Clicked"/>
             
        </StackLayout>
    </ContentPage.Content>
</ContentPage>