<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyStuff.Views.AgregarLocalizacionPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Localizacionde de Objetos!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />


            <Entry x:Name="TxtLocalizacion" Placeholder="Localizacion" FontSize="Large" TextColor="White" FontAttributes="Bold" PlaceholderColor="#B2b2b2" Keyboard="Text" />
           
            <Button x:Name="BtnGuardar" Text="Guardar" BackgroundColor="Green" TextColor="White" FontAttributes="Bold" Clicked="BtnGuardar_Clicked" />
            <Button x:Name="BtnCancelar" Text="Cancelar" BackgroundColor="Firebrick" TextColor="White" Clicked="BtnCancelar_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>